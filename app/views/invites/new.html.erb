<h1> New Invite </h1>
<%= form_tag "/invites", method: :post do %>
  <div>
    User EMAIL :  <input type="text" name="form_guest_email" value="<%= @event.user.email %>">
  </div>
  <div>
    Guest EMAIL: <input type="text" name="form_guest_email">
  </div>
  <div>
    Event Title: <input type="text" name="form_title"> 
  </div>
  <div>
    Event type:
    <select name="event_type_id">
      <% EventType.all.each do |event_type| %>
        <option value="<%= event_type.id %>"><%= event_type.name %></option>
      <% end %>
    </select>
  </div>
  <div> 
    Hosted By: <input type="text" name="form_host"> 
  </div>
  <div>
    Email Contact: <input type="text" name="form_contact_email" value="<%= @event.user.email %>">  
  </div>
  <div>
    Location: <input type="text" name="form_location"> 
  </div>
  <div>
    Address: <input type="text" name="form_address">
  </div>
  <div>
    City: <input type="text" name="form_city">
  </div>
  <div>
    Event Date/Time: <input type="text" name="form_date_time">
  </div>
  <div>
    Message: <textarea name="form_message" placeholder="Your event details..."> </textarea> 
  </div>
  <input type="submit" class="btn btn-default" value="Create Invite">
<% end %>


<!-- Pics Display -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
<!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img src="/event_images/invite1.jpg" alt="Los Angeles" height="600" width="600">
    </div>

    <div class="item">
      <img src="/event_images/invite2.jpeg" alt="Chicago" height="600" width="600">
    </div>

    <div class="item">
      <img src="/event_images/invite3.png" alt="New York" height="600" width="600">
    </div>

    <div class="item">
      <img src="/event_images/invite4.png" alt="New York" height="600" width="600">
    </div>

    <div class="item">
      <img src="/event_images/invite5.jpg" alt="New York" height="600" width="600">
    </div>

    <div class="item">
      <img src="/event_images/invite6.jpg" alt="New York" height="600" width="600">
    </div>

    <div class="item">
      <img src="/event_images/invite7.jpg" alt="New York" height="600" width="600">
    </div>

    <div class="item">
      <img src="/event_images/invite8.jpg" alt="New York" height="600" width="600">
    </div>

    <div class="item">
