
    <h1> New Invite </h1>
    
      <%= form_tag "/invites", method: :post do %>
<div class="row">

<div class="col-md-6">
  <div class="form-group">
        User EMAIL :  <input class="form-control input-sm" type="text" name="form_user_email" value="<%= @event.user.email %>">
      </div>
  <div class="form-group">
    Guest EMAIL: <input class="form-control input-sm" type="text" name="form_guest_email" value="russell@email.com">
  </div>
  <div class="form-group">
    Guest Phone Number: <input class="form-control input-sm" type="text" name="form_guest_phone_number" value="7088031789">
  </div>
  <div class="form-group">
    Event Title: <input class="form-control input-sm" type="text" name="form_title" value="A fun Party"> 
  </div>
  <div class="form-group">
    Event type:
    <select class="form-control input-sm" name="event_type_id">
      <% EventType.all.each do |event_type| %>
        <option value="<%= event_type.id %>"><%= event_type.name %></option>
      <% end %>
    </select>
  </div>
  <div class="form-group"> 
    Hosted By: <input class="form-control input-sm" type="text" name="form_host" value="Peter"> 
  </div>
  <div class="form-group">
    Email Contact: <input class="form-control input-sm" type="text" name="form_contact_email" value="<%= @event.user.email %>">  
  </div>
</div>

<div class="col-md-6">
  <div class="form-group">
    Location: <input class="form-control input-sm" type="text" name="form_location" value="HappyPlace"> 
  </div>
  <div class="form-group">
    Address: <input class="form-control input-sm" type="text" name="form_address" value="222 W Merchandize Mart">
  </div>
  <div class="form-group">
    City: <input class="form-control input-sm" type="text" name="form_city" value="Chicago">
  </div>
  <div class="form-group">
    Event Date/Time:
    <%= datetime_field_tag :form_date_time, '', class: "form-control input-sm" %>
  </div>
  <div class="form-group">
    Message: <textarea name="form_message" class="form-control input-sm" placeholder="Your event details..."> Join us for a fun and exciting celebration !!!</textarea> 
  </div>
  <div class="form-group"> Custom Font: 
  <select class="form-control input-sm" name="form_custom_font">
    <option style="font-family:'Dancing Script';" class="Dancing Script" value="Dancing Script"> Dancing Script </option>
    <option style="font-family:'Amatic SC';" class="Amatic SC" value="Amatic SC"> Amatic SC</option>
    <option style="font-family:'Josefin Slab';" class="Josefin Slab" value="Josefin Slab"> Josefin Slab </option>
    <option style="font-family:'Neucha';" class="Neucha" value="Neucha"> Neucha </option>
    <option style="font-family:'Gloria Hallelujah';" class="Gloria Hallelujah" value="Gloria Hallelujah"> Gloria Hallelujah </option>
    <option style="font-family:'Calligraffitti';" class="Calligraffitti" value="Calligraffitti"> Calligraffitti </option>
</select> 
</div>
  <div>
    <input class="form-control input-sm" type="hidden" name="form_background_image" id="form_background_image">
  </div>
</div>
</div>
