    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Favicon -->
    <link rel="shortcut icon" href="/img/favicon1.png">

    <!-- Style -->
    <link rel="stylesheet" href="/css/theme.css">
  

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <style>
      .container {
        color: white !important;
        background-color: rgba(0,0,0,0.2);
        margin-top: 5vh;
        margin-bottom: 5vh;

      }

      .message {
        font-family: '<%= @invite.custom_font %>';
        font-size: 300%;

      }

      .address {
        font-size: 200%;
      }

      .location {
        font-family: '<%= @invite.custom_font %>';
        font-size: 200%;
      }

      .time {
        font-size: 200%;
      }

      .city {
        font-size: 200%
      }

      .title {
        font-family: '<%= @invite.custom_font %>';
        font-size: 200%;
      }

      .host {
        font-size: 200%;
      }


      p {
        text-align: center;
      }

      h1 {
        text-align: center;
      }

    

    </style>
  </head>


  <body style="background: url(<%= @invite.background_image %>) no-repeat center center fixed; background-size: cover;">

  <div class="container">
  <!-- Footer Social -->
                <ul class="social-inline">
                    <li><a href="http://www.facebook.com/sharer.php?u=" + invite.background_image class="fa fa-fw fa-facebook"></a></li>
                    <li><a href="https://twitter.com/share?url=" + invite.background_image class="fa fa-fw fa-twitter"></a></li>
